<%- contentFor('title') %> Home <%- contentFor('body') %>

<%- include('../shared/_headbar') %>

<main class="container content">
  <%- include('../shared/_flash') %>

  <% publications.forEach(publication=> { %>

  <div class="card">
    <div class="card-header">
      <div>
        <img
          class="avatar"
          src="<%= publication.user.avatar || '/img/avatar-example.png' %>"
        />
        <b><%= publication.user.username %></b>
      </div>
      <img src="/img/icons/more-vertical.svg" />
    </div>
    <div class="card-img">
      <img src="<%= publication.image || '/img/publication_example.jpg' %>" />
    </div>
    <div class="card-body">
      <div class="card-itens">
        <div class="likes">
          <img src="/img/icons/heart.svg" />
          <b><%= publication.likes %> likes</b>
        </div>
        <b>Postado no dia: <%= new Date(publication.created_at).toLocaleDateString() %></b>
      </div>
      <div class="card-comments">
        <% publication.Comments.forEach(comment=> { %>

        <p><b><%= comment.user.username %></b> <%= comment.description %></p>

        <% }) %>
      </div>
    </div>
    <form class="form-comments" action="">
      <input type="text" placeholder="Adicione um comentÃ¡rio..." />
      <button>Publicar</button>
    </form>
  </div>

  <% }) %>
</main>
