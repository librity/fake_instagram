<%- contentFor('title') %>
Signup

<%- contentFor('body') %>

<%- include('../shared/_flash') %>

<main class="container content-auth">
  <div id="banner">
    <img src="/img/banner-login.png" alt="" srcset="" />
    <p>
      Cadastre-se para ver fotos dos seus amigos
    </p>
  </div>

  <form class="form-auth card" action="/users" method="POST">
    <div id="logo">
      <img src="/img/logo.png" alt="" />
    </div>

    <input
      id="email"
      name="email"
      type="email"
      placeholder="Digite seu email"
    />
    <input
      id="name"
      name="name"
      type="text"
      placeholder="Digite seu nome completo"
    />
    <input
      id="username"
      name="username"
      type="text"
      placeholder="Digite seu nome de usuario"
    />
    <input id="password" name="password" type="password" placeholder="Senha" />

    <button type="submit">
      Cadastra-se
    </button>

    <p>
      Ao se cadastrar, você concorda com nossos
      <b>Termos, Política de Dados e Política de Cookies.</b>
    </p>

    <div class="register card">
      <p>
        Tem uma conta? <a href="/sessions/new"><b>Conecte-se</b></a>
      </p>
    </div>
  </form>
</main>
